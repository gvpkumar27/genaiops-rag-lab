# Template only. Do not put real secrets in this file.
# Copy to .env for local use and set secret values there.
API_HOST=127.0.0.1
API_PORT=8000
API_KEY=__set_in_local_env_only__
REQUIRE_API_KEY_ON_NON_LOCALHOST=true
PUBLIC_RESPONSE_SANITIZE=true

QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=localdocchat

OLLAMA_BASE_URL=http://localhost:11434
CHAT_MODEL=mistral:7b-instruct
EMBED_MODEL=nomic-embed-text

TOP_K=6
RETRIEVE_CANDIDATES=15
CHUNK_SIZE=600
CHUNK_OVERLAP=100
LARGE_DOC_MB_THRESHOLD=8
CHUNK_SIZE_LARGE_DOC=420
CHUNK_OVERLAP_LARGE_DOC=70
CHUNK_SIZE_QA_DOC=360
CHUNK_OVERLAP_QA_DOC=60
QA_DOC_NAME_HINTS=q_a,qa,q&a,question,answer,interview,faq

ENABLE_RERANK=true
ENABLE_CACHE=true
PROMPT_VERSION=v1
SYSTEM_PROMPT=__set_in_local_env_only__
SYSTEM_PROMPT_FILE=__set_local_private_file_path__
OLLAMA_TEMPERATURE=0
OLLAMA_TOP_P=1
OLLAMA_SEED=7
HTTP_RETRIES=2
HTTP_RETRY_BACKOFF_SEC=0.5
STABLE_QUERY_NORMALIZATION=true
FAITHFULNESS_MIN_GROUNDED=0.30
ENABLE_CONTAMINATION_FILTER=true
ENABLE_PROMPT_GUARDRAILS=true
ENABLE_OUT_OF_SCOPE_GUARD=true
OUT_OF_SCOPE_MIN_COVERAGE=0.18
GUARDRAILS_FILE=__set_local_private_file_path__
REQUIRE_PRIVATE_GUARDRAILS=false
